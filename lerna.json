{
  "version": "0.1.0-alpha.7",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/**/*",
    "core"
  ],
  "exact": true,
  "command": {
    "version": {
      "message": "chore(release): %s",
      "allowBranch": [
        "main",
        "develop"
      ]
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
