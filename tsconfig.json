{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@mock/*": ["mock/*"]
    }
  },
  "include": ["packages/**/*", "core/**/*"],
  "exclude": ["node_modules", "dist"]
}
